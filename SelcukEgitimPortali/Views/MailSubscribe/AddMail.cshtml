<div class="site-section bg-lightx">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-5">
                <div class="subscribe-1 ">
                    <h2>Haberdar Ol</h2>
                    <p class="mb-5">Eklenen yeni bilgilere ve güncellemelere anında ulaşmak için abone olun.</p>
                    <form method="post" class="d-flex">
                        <input type="text" id="txtmail" class="form-control" placeholder="Mail adresinizi giriniz." name="Mail">
                        <input type="submit" id="btn" class="btn btn-primary" value="Abone Ol">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            Mail: $("#txtmail").val()
        };
        $.ajax({
            type: "post",
            url: "/MailSubscribe/AddMail/",
            data: values,
            success: function (func) {
                location.reload();
            }
        });
    });
</script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
