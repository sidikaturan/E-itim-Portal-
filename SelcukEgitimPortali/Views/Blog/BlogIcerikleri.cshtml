@model IEnumerable<EntityLayer.Concrete.Icerik>
@{
    ViewBag.Title = "BlogIcerikleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<head>
    <link href="~/admin/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/admin/css/plugins/codemirror/ambiance.css" rel="stylesheet">
</head>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">

            <div class="ibox-content m-b-sm border-bottom">
                <div class="text-center p-lg">
                    <h2>@ViewBag.v1</h2>
                    <a href="/Blog/IcerikEkleme/@ViewBag.v2" title="Yeni İçerik Ekle" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> <span class="bold"> Yeni İçerik Ekle</span></a>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="faq-item">

                    <div class="row">
                        @if (item.IcerikTipi.TipID == 1)
                        {
                            <div class="col-md-4">
                                <a data-toggle="collapse" href="#faq1" class="faq-question">@(item.IcerikAciklamasi.Length > 40 ? item.IcerikAciklamasi.Substring(0, item.IcerikAciklamasi.Substring(0,40).LastIndexOf(" "))+"..." : item.IcerikAciklamasi)</a>
                            </div>

                            <div class="col-md-6">
                            </div>
                            <div class="col-md-2">
                                <a href="/Blog/IcerikGuncelleme/@item.IcerikID" class="btn btn-info">
                                    <i class="fa fa-edit"></i>
                                    Güncelle
                                </a>
                            </div>
                        }
                        else if (item.IcerikTipi.TipID == 2)
                        {
                            <div class="col-md-4">
                                <img src="@item.IcerikAciklamasi" height="200px;" width="100%" />
                            </div>

                            <div class="col-md-6">
                            </div>
                            <div class="col-md-2">
                                <a href="/Blog/IcerikGuncelleme/@item.IcerikID" class="btn btn-info">
                                    <i class="fa fa-edit"></i>
                                    Güncelle
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6">
                                <textarea class="code">
@item.IcerikAciklamasi
                        </textarea>
                            </div>
                            <div class="col-md-4">
                            </div>
                            <div class="col-md-2">
                                <a href="/Blog/IcerikGuncelleme/@item.IcerikID" class="btn btn-info">
                                    <i class="fa fa-edit"></i>
                                    Güncelle
                                </a>
                            </div>
                        }
                    </div>

                </div>

            }
        </div>
    </div>
</div>

<script src="~/admin/js/jquery-3.1.1.min.js"></script>
<script src="~/admin/js/popper.min.js"></script>
<script src="~/admin/js/bootstrap.js"></script>
<script src="~/admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>
<script src="~/admin/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

<!-- CodeMirror -->
<script src="~/admin/js/plugins/codemirror/codemirror.js"></script>
<script src="~/admin/js/plugins/codemirror/mode/javascript/javascript.js"></script>

<!-- Custom and plugin javascript -->
<script src="~/admin/js/inspinia.js"></script>
<script src="~/admin/js/plugins/pace/pace.min.js"></script>


<script type="text/javascript">
    function qsa(sel) {
        return Array.apply(null, document.querySelectorAll(sel));
    }
    qsa(".code").forEach(function (editorEl) {
        CodeMirror.fromTextArea(editorEl, {
            lineNumbers: true,
            styleActiveLine: true,
            matchBrackets: true,
        });
    });
</script>


