<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Ekleyin </h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Kullanıcı Adınız *</label>
            <input type="text" id="ad" class="form-control" name="UserName">
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" id="mail" class="form-control" name="Mail">
        </div>
        <input type="hidden" name="CommentDate" value="@DateTime.Now.ToShortDateString()" />
        <input type="hidden" id="blogid" name="BlogID" value="@ViewBag.id" />

        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="CommentText" id="yorum" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" id="btn" value="Yorum Yap" class="btn btn-primary">
        </div>

    </form>
</div>
<script type="text/javascript">$("#btn").click(function () {
    let values = {
        UserName: $("#ad").val(),
        Mail: $("#txtmail").val(),
        BlogID: $("#blogid").val(),
        CommentText: $("#yorum").val()
        };
        $.ajax({
            type: "post",
            url: "/Comment/LeaveComment/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });</script>
